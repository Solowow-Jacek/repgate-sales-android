<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_agenda_event_description_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/view_event_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/view_event_from"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/calendar_text_default"
        android:textSize="13dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/view_event_to"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/calendar_text_default"
        android:textSize="13dp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/view_agenda_event_location_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_location"/>

        <TextView
            android:id="@+id/view_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/calendar_text_default"
            android:textSize="11dp"/>
        <TextView
            android:id="@+id/view_event_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/calendar_text_default"
            android:textSize="11dp"
            android:visibility="gone"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgReqStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_green_dark"/>

    </LinearLayout>

</LinearLayout>